<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thin.blog.polymerization.Techniques">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <Button
        android:id="@+id/bulk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Bulk Polymerization"
        android:textAllCaps="false"
        android:textColor="@color/colorIcons" />

    <Button
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Solution polymerization"
        android:textAllCaps="false"
        android:textColor="@color/colorIcons" />

    <Button
        android:id="@+id/suspension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Suspension Polymerization"
        android:textAllCaps="false"
        android:textColor="@color/colorIcons" />

    <Button
        android:id="@+id/emulsion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Emulsion Polymerization"
        android:textAllCaps="false"
        android:textColor="@color/colorIcons" />

</LinearLayout>
