<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thin.blog.polymersynthesis.Techniques">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <Button
        android:id="@+id/addition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Addition or Chain Growth Polymerisation"
        android:textAllCaps="false"
        android:textColor="@color/colorIcons" />

    <Button
        android:id="@+id/coordination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Coordination Polymerisation"
        android:textAllCaps="false"
        android:textColor="@color/colorIcons" />

    <Button
        android:id="@+id/condensation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Condensation or Step Growth Polymerisation"
        android:textAllCaps="false"
        android:textColor="@color/colorIcons" />

    <Button
        android:id="@+id/copolymerization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="Copolymerization"
        android:textAllCaps="false"
        android:textColor="@color/colorIcons" />
</LinearLayout>
